@page
@model WebApp.Pages_PizzasInOrders.IndexModel

@{
    ViewData["Title"] = "Pizzas In Orders";
}

<h1>Pizzas In Orders</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaInOrder[0].Pizza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaInOrder[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaInOrder[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PizzaInOrder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pizza!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order!.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
