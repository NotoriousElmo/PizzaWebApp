@page
@model WebApp.Pages_AdditionalComponentsInPizzas.IndexModel

@{
    ViewData["Title"] = "Additional Components In Pizza";
}

<h1>Additional Components In Pizza</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalComponentInPizza[0].AdditionalComponent)
            </th>
            <th>
                Pizza Name | Client Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalComponentInPizza[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AdditionalComponentInPizza) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalComponent!.Name)
            </td>
            <td>
                @($"{item.PizzaInOrder?.Pizza?.Name} | {item.PizzaInOrder?.Order?.ClientName}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
